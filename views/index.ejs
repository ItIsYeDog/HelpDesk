<%- include('partials/header') %>

<div class="flex flex-col min-h-screen bg-gray-50">

    <div class="md:hidden fixed top-0 left-0 right-0 bg-white z-10 border-b border-gray-200">
        <div class="flex items-center justify-between px-4 h-16">
            <button id="menuButton" class="p-2 rounded-md text-gray-600 hover:bg-gray-100">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
            </button>
            <h1 class="text-lg font-medium">Helpdesk System</h1>
        </div>
    </div>

    <div id="mobileMenu" class="fixed inset-0 bg-gray-600 bg-opacity-75 z-20 hidden">
        <div class="fixed inset-y-0 left-0 max-w-xs w-full bg-gray-900 text-white">
            <div class="flex items-center justify-between h-16 px-6 bg-gray-800">
                <span class="text-xl font-semibold">Navigasjon</span>
                <button id="closeMenu" class="p-2 rounded-md text-gray-400 hover:text-white">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
            <nav class="px-4 py-6 space-y-4">
                <a href="/" class="block text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg px-4 py-2">Hjem</a>
                <a href="/auth/login" class="block text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg px-4 py-2">Logg inn</a>
                <a href="/auth/register" class="block text-gray-300 hover:bg-gray-800 hover:text-white rounded-lg px-4 py-2">Registrer deg</a>
            </nav>
        </div>
    </div>
    <main class="flex-grow">
        <div class="relative isolate">
            <div class="mx-auto max-w-7xl px-6 py-12 sm:py-16 lg:py-20">
                <div class="text-center">
                    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
                        Helpdesk System
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-gray-600 max-w-2xl mx-auto">
                        Din partner for profesjonell IT-støtte. Vi gjør det enkelt å få hjelp når du trenger det.
                    </p>
                    
                    <div class="mt-16 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 max-w-5xl mx-auto">
                        <div class="relative p-6 bg-white rounded-2xl shadow-sm ring-1 ring-gray-900/10 hover:shadow-lg transition duration-300">
                            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-blue-600 rounded-xl">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                </svg>
                            </div>
                            <h3 class="mt-4 text-lg font-semibold text-gray-900">Rask Respons</h3>
                            <p class="mt-2 text-gray-600">Få svar på dine henvendelser raskt og effektivt</p>
                        </div>

                        <div class="relative p-6 bg-white rounded-2xl shadow-sm ring-1 ring-gray-900/10 hover:shadow-lg transition duration-300">
                            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-blue-600 rounded-xl">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            <h3 class="mt-4 text-lg font-semibold text-gray-900">Sikker Platform</h3>
                            <p class="mt-2 text-gray-600">Din data er trygg hos oss</p>
                        </div>

                        <div class="relative p-6 bg-white rounded-2xl shadow-sm ring-1 ring-gray-900/10 hover:shadow-lg transition duration-300 sm:col-span-2 lg:col-span-1">
                            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-blue-600 rounded-xl">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
                                </svg>
                            </div>
                            <h3 class="mt-4 text-lg font-semibold text-gray-900">24/7 Support</h3>
                            <p class="mt-2 text-gray-600">Alltid tilgjengelig når du trenger hjelp</p>
                        </div>
                    </div>

                    <div class="mt-16 flex flex-col sm:flex-row items-center justify-center gap-4">
                        <a href="/auth/login" 
                           class="w-full sm:w-auto px-8 py-4 text-base font-semibold text-white bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300 shadow-sm">
                            Logg inn
                        </a>
                        <a href="/auth/register" 
                           class="w-full sm:w-auto px-8 py-4 text-base font-semibold text-gray-700 bg-white rounded-xl hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300 shadow-sm ring-1 ring-gray-300">
                            Registrer deg
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
</div>

<script>
    document.getElementById('menuButton')?.addEventListener('click', () => {
        document.getElementById('mobileMenu').classList.remove('hidden');
    });

    document.getElementById('closeMenu')?.addEventListener('click', () => {
        document.getElementById('mobileMenu').classList.add('hidden');
    });

    document.getElementById('mobileMenu')?.addEventListener('click', (e) => {
        if (e.target === document.getElementById('mobileMenu')) {
            document.getElementById('mobileMenu').classList.add('hidden');
        }
    });
</script>