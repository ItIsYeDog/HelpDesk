<%- include('partials/header') %>

<div class="flex flex-col min-h-screen bg-gray-50">
    <main class="flex-grow">
        <!-- Hero Section -->
        <div class="relative isolate">

            <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:py-40">
                <div class="text-center">
                    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
                        Helpdesk System
                    </h1>
                    <p class="mt-6 text-lg leading-8 text-gray-600 max-w-2xl mx-auto">
                        Din partner for profesjonell IT-støtte. Vi gjør det enkelt å få hjelp når du trenger det.
                    </p>
                    
                    <!-- Feature Grid -->
                    <div class="mt-16 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 max-w-5xl mx-auto">
                        <div class="relative p-6 bg-white rounded-2xl shadow-sm ring-1 ring-gray-900/10 hover:shadow-lg transition duration-300">
                            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-blue-600 rounded-xl">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                </svg>
                            </div>
                            <h3 class="mt-4 text-lg font-semibold text-gray-900">Rask Respons</h3>
                            <p class="mt-2 text-gray-600">Få svar på dine henvendelser raskt og effektivt</p>
                        </div>

                        <div class="relative p-6 bg-white rounded-2xl shadow-sm ring-1 ring-gray-900/10 hover:shadow-lg transition duration-300">
                            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-blue-600 rounded-xl">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                                </svg>
                            </div>
                            <h3 class="mt-4 text-lg font-semibold text-gray-900">Sikker Platform</h3>
                            <p class="mt-2 text-gray-600">Din data er trygg hos oss</p>
                        </div>

                        <div class="relative p-6 bg-white rounded-2xl shadow-sm ring-1 ring-gray-900/10 hover:shadow-lg transition duration-300 sm:col-span-2 lg:col-span-1">
                            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-blue-600 rounded-xl">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
                                </svg>
                            </div>
                            <h3 class="mt-4 text-lg font-semibold text-gray-900">24/7 Support</h3>
                            <p class="mt-2 text-gray-600">Alltid tilgjengelig når du trenger hjelp</p>
                        </div>
                    </div>

                    <!-- CTA Buttons -->
                    <div class="mt-16 flex flex-col sm:flex-row items-center justify-center gap-4">
                        <a href="/auth/login" 
                           class="w-full sm:w-auto px-8 py-4 text-base font-semibold text-white bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300 shadow-sm">
                            Logg inn
                        </a>
                        <a href="/auth/register" 
                           class="w-full sm:w-auto px-8 py-4 text-base font-semibold text-gray-700 bg-white rounded-xl hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-300 shadow-sm ring-1 ring-gray-300">
                            Registrer deg
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
</div>